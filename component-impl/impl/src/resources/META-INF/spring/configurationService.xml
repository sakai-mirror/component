<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">


	<!--  
		This bean is instantiated before the application context has been refreshed.
		As a result, it works under unusual constraints. (For example, Spring Resource
		injection won't find files contained within the bean's own JAR.)
	-->
	<bean id="org.sakaiproject.component.api.ConfigurationLoader" class="org.sakaiproject.component.impl.BasicConfigurationLoader"
		init-method="init">
		<property name="defaultSakaiPropertiesResource" value="classpath:/org/sakaiproject/config/sakai.properties"/>
	</bean>

	<bean id="org.sakaiproject.component.api.ServerConfigurationService"
			class="org.sakaiproject.component.impl.BasicConfigurationService"
			init-method="init"
			destroy-method="destroy">

		<property name="threadLocalManager" ref="org.sakaiproject.thread_local.api.ThreadLocalManager" />
		<property name="sessionManager" ref="org.sakaiproject.tool.api.SessionManager" />

		<property name="toolOrderFile" value="${sakai.home}toolOrder.xml"/>
		<property name="defaultToolOrderResource" value="classpath:/org/sakaiproject/config/toolOrder.xml"/>

		<property name="configurationLoader" ref="org.sakaiproject.component.api.ConfigurationLoader"/>
	</bean>

</beans>
